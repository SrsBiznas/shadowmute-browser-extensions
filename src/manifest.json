{
  "background": {
    "scripts": [
      "background/constants.js",
      "background/auth.js",
      "background.js"
    ]
  },
  "manifest_version": 2,
  "name": "Shadowmute",
  "version": "0.0.1",

  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "clipboardWrite",
    "*://localhost/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/sm_ext16.png",
      "32": "images/sm_ext32.png",
      "48": "images/sm_ext48.png",
      "128": "images/sm_ext128.png"
    }
  }
}
